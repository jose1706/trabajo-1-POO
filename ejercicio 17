public class Main {

	public static void main(String[] args) {
		double radio = 4;
		double areac = Math.PI*(radio*radio);
		double longc = 2*Math.PI*(radio);
		System.out.println("el radio es: "+radio);
		System.out.println("el area es: "+areac);
		System.out.println("la longitud de circunferencia es: "+longc);
	}

}
